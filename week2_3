#include <stdio.h>
#include <stdlib.h>

int main()
{
    int c, num;
    float avg;
    scanf("%d", &c);
    for (int i = 0; i < c; i++)
    {
        int list[1000] = {};
        int sum = 0;
        scanf("%d", &num);
        for (int i = 0; i < num; i++)
        {
            scanf("%d", &list[i]);
            sum += list[i];
        }
        avg = (float)sum / num;
        int cnt = 0;
        for (int j = 0; j < num; j++)
        {
            if (list[j] > avg)
                cnt++;
        }
        printf("%.3f%%\n", (float)cnt / num * 100); // %출력하고싶을때는 %%해주면됨 (%만 하면 출력 형식 지정자로 인식해서 %가 출력이 안됨)
    }
}
