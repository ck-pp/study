#include <stdio.h>
#include <stdlib.h>

int list[9] = {};
int main()
{
    for (int i = 0; i < 9; i++)
        scanf("%d", &list[i]);
    int max = 0, idx;
    for (int i = 0; i < 9; i++)
    {
        if(list[i] > max)
        {
            max = list[i];
            idx = i+1;
        }
    }
    printf("%d\n%d", max, idx);
}
